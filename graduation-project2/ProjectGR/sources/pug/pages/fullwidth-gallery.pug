extends  ../_skeleton

//- Includes
include ../elements/_box-gallery
include ../elements/_ui-pagination

block variables
	- var pageName = 'Fullwidth gallery'

block page
	// Page Header
	include ../sections/_header-default
	+breadcrumbs-section({ img: 'breadcrumbs-shop-1920x893' })

	section.section-md.bg-default.isotope-wrap.text-center
		.container
			h2=pageName
			.row
				// Isotope Filters
				.col-xl-12
					.isotope-filters.isotope-filters-horizontal.tabs-custom.tabs-horizontal
						ul.nav-custom.nav-custom-tabs.group-tabs
							li.active(data-isotope-filter='*', data-isotope-group='gallery'): a(href='#') All
									include ../elements/_arrow-down
							li(data-isotope-filter='Type 1', data-isotope-group='gallery'): a(href='#') Residential
									include ../elements/_arrow-down
							li(data-isotope-filter='Type 2', data-isotope-group='gallery'): a(href='#') Commercial
									include ../elements/_arrow-down
							li(data-isotope-filter='Type 3', data-isotope-group='gallery'): a(href='#') Before  and after
									include ../elements/_arrow-down
		.container-fluid.container-fluid-inset-0
			.row
				// Isotope Content
				.col-xl-12
					.isotope.row.row-no-gutter.row-lg-5-column(data-isotope-layout='fitRows', data-isotope-group='gallery', data-lightgallery='group')
						.col-6.col-md-4.col-lg-3.isotope-item(data-filter='Type 1')
							+gallery({
								img: 'fullwidth-gallery-1-384x362',
								imgOriginal: 'gallery-1-1195x800_original'
							})

						.col-6.col-md-4.col-lg-3.isotope-item(data-filter='Type 2')
							+gallery({
								img: 'fullwidth-gallery-2-384x362',
								imgOriginal: 'gallery-2-1067x800_original'
							})

						.col-6.col-md-4.col-lg-3.isotope-item(data-filter='Type 3')
							+gallery({
								img: 'fullwidth-gallery-3-384x362',
								imgOriginal: 'gallery-3-1200x800_original'
							})

						.col-6.col-md-4.col-lg-3.isotope-item(data-filter='Type 1')
							+gallery({
								img: 'fullwidth-gallery-4-384x362',
								imgOriginal: 'gallery-4-1200x793_original'
							})

						.col-6.col-md-4.col-lg-3.isotope-item(data-filter='Type 2')
							+gallery({
								img: 'fullwidth-gallery-5-384x362',
								imgOriginal: 'gallery-5-1200x797_original'
							})

						.col-6.col-md-4.col-lg-3.isotope-item(data-filter='Type 3')
							+gallery({
								img: 'fullwidth-gallery-6-384x362',
								imgOriginal: 'gallery-6-1200x800_original'
							})

						.col-6.col-md-4.col-lg-3.isotope-item(data-filter='Type 3')
							+gallery({
								img: 'fullwidth-gallery-7-384x362',
								imgOriginal: 'gallery-7-1200x800_original'
							})

						.col-6.col-md-4.col-lg-3.isotope-item(data-filter='Type 1')
							+gallery({
								img: 'fullwidth-gallery-8-384x362',
								imgOriginal: 'gallery-8-1054x800_original'
							})

						.col-6.col-md-4.col-lg-3.isotope-item(data-filter='Type 2')
							+gallery({
								img: 'fullwidth-gallery-9-384x362',
								imgOriginal: 'gallery-9-1200x800_original'
							})

						.col-6.col-md-4.col-lg-3.isotope-item(data-filter='Type 3')
							+gallery({
								img: 'fullwidth-gallery-10-384x362',
								imgOriginal: 'gallery-10-1200x772_original'
							})

			.pagination-wrap.text-center
				+pagination-bootstrap(null, 1, 3)

	// Page Footer
	include ../sections/_footer-default