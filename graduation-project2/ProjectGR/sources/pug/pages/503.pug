extends  ../_skeleton

block variables
	- var pageName = '503'

block page
	// Page Header
	include ../sections/_header-default
	+breadcrumbs-section({ img: 'breadcrumbs-team-1920x974' })

	section.section-md.bg-default
		.container
			h2=pageName
			h6.offset-top-0 Service is temporary unavailable
			p.big.text-width-medium Sorry, we're offline right now to make our site even better. Please, come back later and check what we've been up to.
			.group-xs
				a(href="index.html").button.button-primary Back to home page
					include ../elements/_arrow-down

				a(href="contacts.html").button.button-primary Contact us
					include ../elements/_arrow-down

	// Page Footer
	include ../sections/_footer-default

